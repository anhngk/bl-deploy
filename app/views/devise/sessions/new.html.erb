<div class="container user-auth">
  <h2>ĐĂNG NHẬP</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal col-md-6 col-sm-offset-3'}) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'control-label col-sm-4' %>
    <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Mật khẩu', class: 'control-label col-sm-4' %>
    <div class="col-sm-8">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
    </div>
  </div>
  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <div class="checkbox">
        <label>
          <%= f.check_box :remember_me %> Remember me
        </label>
      </div>
    </div>
  </div>
  <% end -%>
  <div class="form-group">
    <div class="col-sm-8 col-sm-offset-4">
      <%= f.submit "Đăng nhập", class: 'btn btn-primary' %>
    </div>
  </div>
  <% end %>
  <div class="col-sm-7 col-sm-offset-5">
    <%= render "devise/shared/links" %>
  </div>
</div>