<div class="container user-auth">
  
  <h2>ĐĂNG KÝ</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal col-md-6 col-sm-offset-3' }) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <%= f.label 'Họ và tên', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :ten_kh, autofocus: true,  class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: 'col-sm-4 control-label' %>
    <div class="col-sm-8">
      <%= f.email_field :email, autofocus: true,  class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Điện thoại', class: 'col-sm-4 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :dien_thoai, autofocus: true,  class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Mật khẩu', class: 'col-sm-4 control-label' %>
  <div class="col-sm-8"> 
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Tối thiểu 6 kí tự' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Xác nhận mật khẩu', class: "col-sm-4 control-label" %>
    <div class="col-sm-8">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Lặp lại mật khẩu' %>
    </div>
  </div>
  <div class="col-sm-offset-4 col-sm-8" style="padding-left: 10px">
    <%= f.submit "Đăng ký", class: 'btn btn-success'%>
  </div>
  <% end %>
  <div class="col-sm-offset-5 col-sm-7" style = "text-align: left; margin-top: 10px;"><%= render "devise/shared/links" %></div>  
</div>