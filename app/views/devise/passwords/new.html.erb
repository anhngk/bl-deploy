<div class="container user-auth">
	<h2>Quên mật khẩu?</h2>
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-horizontal col-md-6 col-sm-offset-3' }) do |f| %>
	<%= devise_error_messages! %>
	<div class="form-group">
		<%= f.label :email, class: 'control-label col-sm-4' %>
		<div class="col-sm-8">
			<%= f.email_field :email, autofocus: true, class: 'form-control' %>
		</div>
	</div>
	<div class="col-sm-offset-4 col-sm-8" style="padding-left: 7px">
		<%= f.submit "Gửi hướng dẫn đặt lại mật khẩu", class: 'btn btn-primary' %>
	</div>
	<% end %>
	<div class="col-sm-offset-5 col-sm-7" style = "margin-top: 10px;"><%= render "devise/shared/links" %>
</div>