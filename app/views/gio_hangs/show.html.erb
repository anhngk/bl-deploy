<div class="container">
	<h2>GIỎ HÀNG</h2>
	<div class="col-md-9 cart-left-col">
		<% @gio_hang.chi_tiet_gio_hangs.each do |chi_tiet| %>
		<%= form_for (chi_tiet) do |f| %>
		<div class="line-item row">
			<div class="item-img col-md-2"><%= image_tag chi_tiet.hang_hoa.image.url(:xs) %></div>
			<div class="item-name col-md-4"><%= chi_tiet.hang_hoa.ten_hang %></div>
			<div class="item-price col-md-2"><strong><%= number_to_currency(chi_tiet.hang_hoa.gias.last[:gia_ban], locale: :vn) %></strong></div>
			<div class="item-qty col-md-2"><%= f.number_field :so_luong, value: chi_tiet.so_luong, class: "form-control" %></div>
			<div class="item-f5-btn col-md-1">
				<%= button_tag(type: "submit", class: "btn btn-default") do %>
					<i class="fa fa-refresh" aria-hidden="true"></i>
				<% end %>
				
			</div>
			<div class="item-del-btn col-md-1">
				<%= link_to chi_tiet_gio_hang_path(chi_tiet), method: :delete do %>
					<i class="fa fa-times" aria-hidden="true"></i>
				<% end %>
			</div>
		</div>
		<% end %>
		<% end %>
		
